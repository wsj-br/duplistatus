{
  "batchSize": 20,
  "maxBatchChars": 5000,
  "openrouter": {
    "baseUrl": "https://openrouter.ai/api/v1",
    "defaultModel": "anthropic/claude-haiku-4.5",
    "fallbackModel": "anthropic/claude-3-haiku",
    "maxTokens": 8192,
    "temperature": 0.2
  },
  "locales": {
    "source": "en",
    "targets": ["fr", "de", "es", "pt-BR"]
  },
  "paths": {
    "docs": "./docs",
    "i18n": "./i18n",
    "cache": "./.translation-cache",
    "glossary": "./glossary.csv"
  },
  "cache": {
    "enabled": true,
    "segmentLevel": true
  }
}
